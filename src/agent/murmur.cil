                  (macro mounton_conffile_sock_files ((type ARG1))
                         (allow ARG1 conffile mounton_sock_file))

                  (macro read_conffile ((type ARG1))
                         (allow ARG1 conffile (allfiles (read))))

                  (macro read_conffile_blk_files ((type ARG1))
