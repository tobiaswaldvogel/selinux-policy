(in .sys
    (call .swconfig.subj_type_transition (subj)))

(block swconfig

    ;;
    ;; Contexts
    ;;

    (filecon
     "/usr/bin/swconfig"
     file
     execfile_file_context)

    ;;
    ;; Policy
    ;;

    (blockinherit .agent.base_template)

    (allow subj self (capability (net_admin)))
    (allow subj self create_netlink_generic_socket)

    (call .sys.writeinherited_fifo_files (subj))

    (call .file.search_conffile_dirs (subj))
    (call .file.search_datafile_dirs (subj))

    (call .libc.mapexecute_libfile_files (subj))
    (call .libc.read_libfile_files (subj))

    (call .libgccruntime.mapexecute_libfile_files (subj))
    (call .libgccruntime.read_libfile_files (subj))

    (call .libnltiny.mapexecute_libfile_files (subj))
    (call .libnltiny.read_libfile_files (subj))

    (call .libubox.mapexecute_libfile_files (subj))
    (call .libubox.read_libfile_files (subj))

    (call .libuci.mapexecute_libfile_files (subj))
    (call .libuci.read_libfile_files (subj))

    (call .uci.read_conffile_files (subj))
    (call .uci.read_tmpfile_files (subj))
    (call .uci.search_conffile_dirs (subj))
    (call .uci.search_tmpfile_dirs (subj))

    (optional swconfig_opt_rcnetwork
              (call .rcnetwork.use_fds (subj))))
