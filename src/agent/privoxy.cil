(in .sys
    (call .privoxy.subj_type_transition (subj)))

(in .file
    (call .privoxy.obj_type_transition_conffile (unconfined.subj_typeattr))
    (call .privoxy.obj_type_transition_execfile (unconfined.subj_typeattr))
    (call .privoxy.obj_type_transition_conftmpfile
          (unconfined.subj_typeattr))
    (call .privoxy.obj_type_transition_logtmpfile
          (unconfined.subj_typeattr))
    (call .privoxy.obj_type_transition_runtimetmpfile
          (unconfined.subj_typeattr))
    (call .privoxy.obj_type_transition_tmpfile
          (unconfined.subj_typeattr)))

(in privoxy

    ;;
    ;; Contexts
    ;;

    (filecon
     "/etc/privoxy"
     dir
     conffile_file_context)
    (filecon
     "/etc/privoxy/.*"
     any
     conffile_file_context)

    (filecon
     "/tmp/etc/privoxy\.conf"
     file
     conftmpfile_file_context)
    (filecon
     "/tmp/etc/privoxy\.conf\..*"
     file
     conftmpfile_file_context)

    (filecon
     "/tmp/log/privoxy\.log"
     file
     logtmpfile_file_context)
    (filecon
     "/tmp/log/privoxy\.log\..*"
     file
     logtmpfile_file_context)

    (filecon
     "/tmp/privoxy"
     dir
     tmpfile_file_context)
    (filecon
     "/tmp/privoxy/.*"
     any
     tmpfile_file_context)
    (filecon
     "/tmp/privoxy\.hotplug"
     file
     tmpfile_file_context)

    (filecon
     "/tmp/run/privoxy\.pid"
     file
     runtimetmpfile_file_context)

    (filecon
     "/usr/bin/privoxy"
     file
     execfile_file_context)

    ;;
    ;; Macros
    ;;

    (macro obj_type_transition_conffile ((type ARG1))
           (call .file.conffile_obj_type_transition
                 (ARG1 conffile dir "privoxy")))

    (macro obj_type_transition_conftmpfile ((type ARG1))
           (call .tmpfile.conftmpfile_obj_type_transition
                 (ARG1 conftmpfile file "privoxy.conf"))
           (call .tmpfile.conftmpfile_obj_type_transition
                 (ARG1 conftmpfile file "privoxy.conf.tmp")))

    (macro obj_type_transition_execfile ((type ARG1))
           (call .file.execfile_obj_type_transition
                 (ARG1 execfile file "privoxy")))

    (macro obj_type_transition_logtmpfile ((type ARG1))
           (call .tmpfile.logtmpfile_obj_type_transition
                 (ARG1 logtmpfile file "privoxy.log")))

    (macro obj_type_transition_runtimetmpfile ((type ARG1))
           (call .tmpfile.runtimetmpfile_obj_type_transition
                 (ARG1 runtimetmpfile file "privoxy.pid")))

    (macro obj_type_transition_tmpfile ((type ARG1))
           (call .tmp.fs_obj_type_transition
                 (ARG1 tmpfile dir "privoxy"))
           (call .tmp.fs_obj_type_transition
                 (ARG1 tmpfile file "privoxy.hotplug")))

    (macro setattr_tmpfile_dirs ((type ARG1))
           (allow ARG1 tmpfile (dir (setattr))))

    ;;
    ;; Policy
    ;;

    (blockinherit .agent.base_template)
    (blockinherit .file.conf.obj_template)
    (blockinherit .tmpfile.conf.obj_template)
    (blockinherit .tmpfile.log.obj_template)
    (blockinherit .tmpfile.runtime.obj_template)
    (blockinherit .tmpfile.obj_template)

    (call tcp_bind_netports (subj))

    (call .net.egress_netifs (subj))
    (call .net.sendto_netnodes (subj))
    (call .net.tcp_bind_netnodes (subj))

    (call .tmpfile.deletename_runtimetmpfile_dirs (subj)))
