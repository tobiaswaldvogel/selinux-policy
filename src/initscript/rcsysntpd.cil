(in .sys
    (call .rcsysntpd.subj_type_transition (subj)))

(block rcsysntpd

       ;;
       ;; Contexts
       ;;

       (filecon
        "/etc/init\.d/sysntpd"
        file
        initscriptfile_file_context)

       ;;
       ;; Policy
       ;;

       (blockinherit .initscript.base_template)

       (call .ntpdhotplug.subj_type_transition (subj))

       (call .tmp.list_fs_dirs (subj)))
