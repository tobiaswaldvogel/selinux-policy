(sid
 devnull)

(sidcontext
 devnull
 (.u
  .r
  .null.nodedev
  (systemlow
   systemlow)))

(block null

       ;;
       ;; Contexts
       ;;

       (filecon
        "/dev/full"
        char
        nodedev_file_context)
       (filecon
        "/dev/null"
        char
        nodedev_file_context)

       ;;
       ;; Macros
       ;;

       (macro obj_type_transition_nodedev ((type ARG1))
              (call .tmp.fs_obj_type_transition
                    (ARG1 nodedev chr_file "full"))
