(block pts

       ;;
       ;; Contexts
       ;;

       (filecon
        "/dev/pts(/.*)?"
        any
        ())

       (fsuse
        trans
        "devpts"
        fs_context)

       ;;
       ;; Policy
       ;;

       (blockinherit .fs.obj_file_macro_template)
       (blockinherit .fs.seclabel.obj_template)

       (allow fs self (filesystem (associate))))
